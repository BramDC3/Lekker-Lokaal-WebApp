@model LekkerLokaal.Models.AdminViewModels.CadeaubonBerwerkViewModel

@{
    ViewData["Title"] = "CadeaubonBewerken";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<section class="wrapper">
    <h1 class="text-center"></h1>

    <section class="panel">
        <header class="panel-heading">Cadeaubon bewerken</header>
        <div class="panel-body">
            <form onsubmit="PrepareFormForSubmit()" class="form-horizontal bucket-form" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label class="col-sm-3 control-label">Id bon (niet aanpasbaar)</label>
                    <div class="col-sm-6">
                        <input class="form-control" required="required" asp-for="BonId" readonly>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-3 control-label">Naam handelaar (niet aanpasbaar)</label>
                    <div class="col-sm-6">
                        <input class="form-control" required="required" asp-for="naamHandelaar" readonly>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-3 control-label">Naam cadeaubon</label>
                    <div class="col-sm-6">
                        <input class="form-control" required="required" id="0" asp-for="Naam" readonly>
                        <span asp-validation-for="Naam" class="text-danger"></span>
                    </div>
                    <div class="col-sm-1">
                        <a onclick="ToggleReadOnly('0')" class="clickable"><i id="0icon" class="fas fa-lock"></i></a>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-3 control-label">Beschrijving cadeaubon</label>
                    <div class="col-sm-6">
                        <input class="form-control" required="required" id="1" asp-for="Beschrijving" readonly>
                        <span asp-validation-for="Beschrijving" class="text-danger"></span>
                    </div>
                    <div class="col-sm-1">
                        <a onclick="ToggleReadOnly('1')" class="clickable"><i id="1icon" class="fas fa-lock"></i></a>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-3 control-label">Minimumprijs</label>
                    <div class="col-sm-6">
                        <input class="form-control" required="required" id="2" asp-for="MinimumPrijs" readonly>
                        <span asp-validation-for="MinimumPrijs" class="text-danger"></span>
                    </div>
                    <div class="col-sm-1">
                        <a onclick="ToggleReadOnly('2')" class="clickable"><i id="2icon" class="fas fa-lock"></i></a>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-3 control-label">Maxmimumprijs</label>
                    <div class="col-sm-6">
                        <input class="form-control" required="required" id="3" asp-for="Maximumprijs" readonly>
                        <span asp-validation-for="Maximumprijs" class="text-danger"></span>
                    </div>
                    <div class="col-sm-1">
                        <a onclick="ToggleReadOnly('3')" class="clickable"><i id="3icon" class="fas fa-lock"></i></a>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-3 control-label" asp-for="Categorie"></label>
                    <div class="col-sm-6">
                        <select class="form-control" asp-for="Categorie" id="4" asp-items="@(ViewData["categorieen"] as SelectList)" disabled>
                            <option value="">--- Selecteer categorie ---</option>
                        </select>
                        <span asp-validation-for="Categorie" class="text-danger"></span>
                    </div>
                    <div class="col-sm-1">
                        <a onclick="ToggleDisabled('4')" class="clickable"><i id="4icon" class="fas fa-lock"></i></a>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-3 control-label">Straatnaam</label>
                    <div class="col-sm-6">
                        <input class="form-control" required="required" id="5" asp-for="Straatnaam" readonly>
                        <span asp-validation-for="Straatnaam" class="text-danger"></span>
                    </div>
                    <div class="col-sm-1">
                        <a onclick="ToggleReadOnly('5')" class="clickable"><i id="5icon" class="fas fa-lock"></i></a>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-3 control-label">Huisnummer</label>
                    <div class="col-sm-6">
                        <input class="form-control" required="required" id="6" asp-for="Huisnummer" readonly>
                        <span asp-validation-for="Huisnummer" class="text-danger"></span>
                    </div>
                    <div class="col-sm-1">
                        <a onclick="ToggleReadOnly('6')" class="clickable"><i id="6icon" class="fas fa-lock"></i></a>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-3 control-label">Postcode</label>
                    <div class="col-sm-6">
                        <input class="form-control" required="required" id="7" asp-for="Postcode" readonly>
                        <span asp-validation-for="Postcode" class="text-danger"></span>
                    </div>
                    <div class="col-sm-1">
                        <a onclick="ToggleReadOnly('7')" class="clickable"><i id="7icon" class="fas fa-lock"></i></a>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-3 control-label">Gemeente</label>
                    <div class="col-sm-6">
                        <input class="form-control" required="required" id="8" asp-for="Gemeente" readonly>
                        <span asp-validation-for="Gemeente" class="text-danger"></span>
                    </div>
                    <div class="col-sm-1">
                        <a onclick="ToggleReadOnly('8')" class="clickable"><i id="8icon" class="fas fa-lock"></i></a>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-3 control-label" asp-for="Aanbieding"></label>
                    <div class="col-sm-6">
                        <select class="form-control" asp-for="Aanbieding" id="9" asp-items="@(ViewData["aanbiedingen"] as SelectList)" disabled>
                            <option value="">--- Selecteer type ---</option>
                        </select>
                        <span asp-validation-for="Aanbieding" class="text-danger"></span>
                    </div>
                    <div class="col-sm-1">
                        <a onclick="ToggleDisabled('9')" class="clickable"><i id="9icon" class="fas fa-lock"></i></a>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-3 control-label">Thumbnail</label>
                    <div class="col-sm-6">
                        <img src="@Model.GetThumbPath" alt="Logo" class="img-thumbnail max-height-350px">
                        <label class="btn btn-default" id="fileselection">
                            <a class="" id="fileselectionTekst">Selecteer een nieuwe thumbnail</a><input asp-for="Thumbnail" accept=".jpg" id="fileToUpload" style="display: none;">
                        </label>
                        <span asp-validation-for="Thumbnail" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-3 control-label">Afbeeldingen</label>
                    <div class="col-sm-6">
                        <a href="@Url.Action("Detail", "Home", new { Id = Model.BonId})" target="_blank">Bekijk hier de huidige afbeeldingen</a>
                        <label class="btn btn-default" id="fileselection2">
                            <a class="" id="fileselectionTekst2">Selecteer nieuwe afbeeldingen</a><input asp-for="Afbeeldingen" accept=".jpg" id="fileToUpload2" style="display: none;">
                        </label>
                        <span asp-validation-for="Afbeeldingen" class="text-danger"></span>
                    </div>
                </div>



                <div class="col-md-9 col-md-offset-3">
                    <a asp-controller="Admin" asp-action="CadeaubonOverzicht" class="btn btn-danger mr-20">Annuleer</a>
                    <button type="submit" class="btn btn-success">Pas de wijzigingen aan</button>
                </div>
            </form>
        </div>
    </section>
</section>

<script>
    $("#fileToUpload").change(function () {
        document.getElementById('fileselectionTekst').innerHTML = 'U heeft een bestand geselecteerd';
    });
</script>

<script>
    $("#fileToUpload2").change(function () {
        document.getElementById('fileselectionTekst2').innerHTML = 'U heeft een bestand geselecteerd';
    });
</script>