@model LekkerLokaal.Models.AdminViewModels.HandelaarBewerkViewModel

@{
    ViewData["Title"] = "Handelaar bewerken";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<section class="wrapper">
    <h1 class="text-center"></h1>

    <section class="panel">
        <header class="panel-heading">Details van de handelaar: @Model.Naam</header>
        <div class="panel-body">
            <div class="form-horizontal bucket-form">
                <div class="form-group">
                    <label class="col-sm-3 control-label">ID (niet aanpasbaar)</label>
                    <div class="col-sm-6">
                        <input type="text" asp-for="HandelaarId" class="form-control" readonly>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-3 control-label">Naam handelszaak</label>
                    <div class="col-sm-6">
                        <input class="form-control" required="required" asp-for="Naam" readonly>
                        <span asp-validation-for="Naam" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-3 control-label">E-mailadres</label>
                    <div class="col-sm-6">
                        <input class="form-control" required="required" asp-for="Emailadres" readonly>
                        <span asp-validation-for="Emailadres" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-3 control-label">Straatnaam</label>
                    <div class="col-sm-6">
                        <input class="form-control" required="required" asp-for="Straat" readonly>
                        <span asp-validation-for="Straat" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-3 control-label">Huisnummer</label>
                    <div class="col-sm-6">
                        <input class="form-control" required="required" asp-for="Huisnummer" readonly>
                        <span asp-validation-for="Huisnummer" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-3 control-label">Postcode</label>
                    <div class="col-sm-6">
                        <input class="form-control" required="required" asp-for="Postcode" readonly>
                        <span asp-validation-for="Postcode" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-3 control-label">Gemeente</label>
                    <div class="col-sm-6">
                        <input class="form-control" required="required" asp-for="Gemeente" readonly>
                        <span asp-validation-for="Gemeente" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-3 control-label">Btw nummer</label>
                    <div class="col-sm-6">
                        <input class="form-control" required="required" asp-for="BTW_Nummer" readonly>
                        <span asp-validation-for="BTW_Nummer" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-3 control-label">Korte omschrijving</label>
                    <div class="col-sm-6">
                        <input class="form-control" required="required" asp-for="Beschrijving" readonly>
                        <span asp-validation-for="Beschrijving" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-3 control-label">Logo</label>
                    <div class="col-sm-6">
                        <img src="@Model.LogoPath" alt="Logo" class="img-thumbnail max-height-350px">
                    </div>
                </div>



            </div>
        </div>
    </section>
</section>
