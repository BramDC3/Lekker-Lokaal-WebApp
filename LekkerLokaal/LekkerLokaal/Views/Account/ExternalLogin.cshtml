@model ExternalLoginViewModel
@{
    ViewData["Title"] = "Registreer";
    ViewData["Navbar"] = "Account";
}

<h2>@ViewData["Title"]</h2>
<h4>Associate your @ViewData["LoginProvider"] account.</h4>
<hr />

<p class="text-info">
    U heeft succesvol uw <strong>@ViewData["LoginProvider"]</strong> profiel verbonden aan deze website.
    Gelieve onderstaande gegevens in te vullen en te bevestigen om verder te gaan.
</p>

<div class="row">
    <div class="col-md-4">
        <form asp-action="ExternalLoginConfirmation" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Email"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Voornaam"></label>
                <input class="form-control input-lg" placeholder="Voornaam" asp-for="Voornaam">
                <span asp-validation-for="Voornaam" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Familienaam"></label>
                <input class="form-control input-lg" placeholder="Familienaam" asp-for="Familienaam">
                <span asp-validation-for="Familienaam" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Geslacht"></label>
                <select class="form-control input-lg search-select" asp-for="Geslacht" asp-items="@(ViewData["Geslacht"] as SelectList)"></select>
                <span asp-validation-for="Geslacht" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-default">Bevestig gegevens</button>
        </form>
    </div>
</div>
