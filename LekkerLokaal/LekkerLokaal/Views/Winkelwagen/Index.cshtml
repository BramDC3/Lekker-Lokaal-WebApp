@model IEnumerable<LekkerLokaal.Models.CartViewModels.IndexViewModel>

@{
    ViewData["Title"] = "Winkelwagen";
}

<main id="mainContent" class="main-content">
    <div class="page-container">
        <div class="container">
            <div class="cart-area ptb-60">
                <div class="container">
                    <div class="cart-wrapper">
                        <h3 class="h-title mb-30 t-uppercase">Uw winkelwagen</h3>
                        <table id="cart_list" class="cart-list mb-30">
                            <thead class="panel t-uppercase">
                                <tr>
                                    <th>Cadeaubon</th>
                                    <th>Waarde</th>
                                    <th>Hoeveelheid</th>
                                    <th>Subtotaal</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var line in Model)
                                {
                                    <tr class="panel alert">
                                        <td>
                                            <div class="media-left is-hidden-sm-down">
                                                <figure class="product-thumb">
                                                    <img src="@line.GetThumbPath" alt="product">
                                                </figure>
                                            </div>
                                            <div class="media-body valign-middle">
                                                <h6 class="title mb-15 t-uppercase">@($"{line.Bon}")</h6>
                                                <div class="type font-12"><span class="t-uppercase">Categorie: </span>@($"{line.Categorie}")</div>
                                            </div>
                                        </td>
                                        <td>@($"€ {line.Prijs:N2}")</td>
                                        <td>
                                            <input class="quantity-label" type="number" value="@($"{line.Aantal}")">
                                        </td>
                                        <td>
                                            <div class="sub-total">@($"€ {line.SubTotaal:N2}")</div>
                                        </td>
                                        <td>
                                            <button type="button" class="close" data-dismiss="alert" aria-hidden="true">
                                                <i class="fa fa-trash-o"></i>
                                            </button>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <div class="cart-price">

                            <ul class="panel mb-20">

                                <li>
                                    <div class="item-name">
                                        <strong class="t-uppercase">Totaal</strong>
                                    </div>
                                    <div class="price">
                                        <span>@($"€ {ViewData["Totaal"]:N2}")</span>
                                    </div>
                                </li>
                            </ul>
                            <div class="t-right">
                                <a asp-controller="Winkelwagen" asp-action="Checkout" class="btn btn-rounded btn-lg">BESTELLEN</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>