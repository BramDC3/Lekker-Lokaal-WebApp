@model IndexViewModel
@{
    ViewData["Title"] = "Uw persoonlijke gegevens";
    ViewData.AddActivePage(ManageNavPages.Index);
}


<div class="page-container ptb-10">
    <div class="container width-100">
        <section class="sign-area panel p-40 mr-10">
            <h4>@ViewData["Title"]</h4>
            @Html.Partial("_StatusMessage", Model.StatusMessage)
            <div class="row">
                <div>
                    <form method="post">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Email"></label>
                            @if (Model.IsEmailConfirmed)
                    {
                        <div class="input-group">
                            <input asp-for="Email" class="form-control" disabled />
                            <span class="input-group-addon" aria-hidden="true"><span class="glyphicon glyphicon-ok text-success"></span></span>
                        </div>
            }
            else
            {
                <input asp-for="Email" class="form-control" readonly />
                <button asp-action="SendVerificationEmail" class="btn btn-link">Verstuur bevestigingsmail</button>
    }
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Voornaam"></label>
                            <input class="form-control input-lg" placeholder="Voornaam" asp-for="Voornaam">
                            <span asp-validation-for="Voornaam" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Familienaam"></label>
                            <input class="form-control input-lg" placeholder="Familienaam" asp-for="Familienaam">
                            <span asp-validation-for="Familienaam" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Geslacht"></label>
                            <select class="form-control input-lg search-select" asp-for="Geslacht" asp-items="@(ViewData["Geslacht"] as SelectList)"></select>
                            <span asp-validation-for="Geslacht" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-default">Gegevens bijwerken</button>
                    </form>
                </div>
            </div>
        </section>
    </div>
</div>

