
@{
    ViewData["Title"] = "Bestelling";
}

<main id="mainContent" class="main-content">
    <!-- Page Container -->
    <div class="page-container ptb-60">
        <div class="container">
            <div class="row row-rl-10 row-tb-20">
                <div class="page-content col-xs-12 col-sm-8 col-md-9">

                    <!-- Checkout Area -->
                    <section class="section checkout-area panel prl-30 pt-20 pb-40">
                        <h2 class="h2 mb-20 h-title">Bijkomende informatie <br>Cadeaubon 1: "Restaurant Lekker, € 50, Aalst"</h2>
                        <form class="mb-30">


                            <div class="form-group">
                                <label>Uw naam</label>
                                <input type="text" class="form-control" placeholder="Uw naam">
                            </div>

                            <div class="form-group">
                                <label>Uw e-mailadres</label>
                                <input type="text" class="form-control" placeholder="Uw e-mailadres">
                            </div>

                            <div class="form-group">
                                <label>
                                    Naam ontvanger <span class="color-mid"></span>
                                </label>
                                <input type="text" class="form-control" placeholder="Naam ontvanger">
                            </div>

                            <div class="form-group">
                                <label>
                                    E-mailadres ontvanger <span class="color-mid"></span>
                                </label>
                                <input type="text" class="form-control" placeholder="E-mailadres ontvanger">
                            </div>

                            <div class="form-group">
                                <label>
                                    Persoonlijke boodschap (optioneel)<span class="color-mid"></span>
                                </label>
                                <input style="height: 200px" type="text" class="form-control" placeholder="Persoonlijke boodschap">
                            </div>
                        </form>
                        <div class="custom-checkbox mb-20">
                            <input type="checkbox" id="agree_terms">
                            <label class="color-mid" for="agree_terms">Ik wens een factuur voor deze aankoop.</label>
                        </div>
                        <a href="cart.html" class="btn btn-lg btn-warning btn-rounded">Annuleer</a>
                        <a href="checkout_payment.html" class="btn btn-lg btn-rounded mr-10">Volgende cadeaubon</a>

                    </section>
                    <!-- End Checkout Area -->

                </div>
                <div class="page-sidebar col-xs-12 col-sm-4 col-md-3">

                    <!-- Blog Sidebar -->
                    <aside class="sidebar blog-sidebar">
                        <div class="row row-tb-10">
                            <div class="col-xs-12">
                                <!-- Recent Posts -->
                                <div class="widget checkout-widget panel p-20">
                                    <div class="widget-body">
                                        <table class="table mb-15">
                                            <tbody>
                                                <tr>
                                                    <td class="color-mid">Aantal bonnen:</td>
                                                    <td>@ViewData["Aantal"]</td>
                                                </tr>
                                                <tr class="font-15">
                                                    <td class="color-mid">Totaal:</td>
                                                    <td class="color-green">@($"€ {ViewData["Totaal"]:N2}")</td>
                                                </tr>
                                            </tbody>
                                        </table>
                                        <a asp-controller="Winkelwagen" asp-action="Index" class="btn btn-info btn-block btn-sm">Bewerk winkelmandje</a>
                                    </div>
                                </div>
                                <!-- End Recent Posts -->
                            </div>
                        </div>
                    </aside>
                    <!-- End Blog Sidebar -->
                </div>
            </div>
        </div>
    </div>
    <!-- End Page Container -->


</main>
<!-- –––––––––––––––[ END PAGE CONTENT ]––––––––––––––– -->
